<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_layout_crearHabitante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearHabitante">

    <EditText
        android:id="@+id/input_crear_nombreHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_crear_reinoHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Reino"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_crear_nombreHabitante"
        app:layout_constraintStart_toStartOf="@+id/input_crear_nombreHabitante"
        app:layout_constraintTop_toBottomOf="@+id/input_crear_nombreHabitante" />

    <EditText
        android:id="@+id/input_crear_tipoHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Tipo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_crear_reinoHabitante"
        app:layout_constraintStart_toStartOf="@+id/input_crear_reinoHabitante"
        app:layout_constraintTop_toBottomOf="@+id/input_crear_reinoHabitante" />

    <CheckBox
        android:id="@+id/chb_crear_extintoHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Extinto"
        app:layout_constraintEnd_toEndOf="@+id/input_crear_reproduccion"
        app:layout_constraintStart_toStartOf="@+id/input_crear_reproduccion"
        app:layout_constraintTop_toBottomOf="@+id/input_crear_reproduccion" />

    <Button
        android:id="@+id/btn_aceptar_crearHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_cancelar_crearHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_aceptar_crearHabitante"
        app:layout_constraintEnd_toStartOf="@+id/btn_aceptar_crearHabitante"
        app:layout_constraintTop_toTopOf="@+id/btn_aceptar_crearHabitante" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Crear habitantes"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_crear_reproduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Tipo de reproducciÃ³n"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_crear_tipoHabitante"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_crear_tipoHabitante"
        app:layout_constraintTop_toBottomOf="@+id/input_crear_tipoHabitante" />


</androidx.constraintlayout.widget.ConstraintLayout>