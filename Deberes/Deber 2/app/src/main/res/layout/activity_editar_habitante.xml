<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarHabitante">

    <TextView
        android:id="@+id/txt_habitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_editar_nombreHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

    <EditText
        android:id="@+id/input_editar_reinoHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Reino"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_nombreHabitante"
        app:layout_constraintStart_toStartOf="@+id/input_editar_nombreHabitante"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_nombreHabitante" />

    <EditText
        android:id="@+id/input_editar_tipoHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Tipo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_reinoHabitante"
        app:layout_constraintStart_toStartOf="@+id/input_editar_reinoHabitante"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_reinoHabitante" />

    <EditText
        android:id="@+id/input_editar_reproduccionHabitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="ReproducciÃ³n"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_tipoHabitante"
        app:layout_constraintStart_toStartOf="@+id/input_editar_tipoHabitante"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_tipoHabitante" />

    <CheckBox
        android:id="@+id/chb_editar_habitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Extinto"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_reproduccionHabitante"
        app:layout_constraintStart_toStartOf="@+id/input_editar_reproduccionHabitante"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_reproduccionHabitante" />

    <Button
        android:id="@+id/btn_editar_aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_editar_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_editar_aceptar"
        app:layout_constraintEnd_toStartOf="@+id/btn_editar_aceptar"
        app:layout_constraintTop_toTopOf="@+id/btn_editar_aceptar" />
</androidx.constraintlayout.widget.ConstraintLayout>